{
  "manifest_version": 3,
  "name": "Project DIH",
  "version": "1.0.0",
  "icons": {
    "16": "iconDIH.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["initializeUI.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["/react/index.js", "/react/vendor.js", "/react/index.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
